{
  "name": "@hemjs/express-adapter",
  "version": "0.4.1",
  "description": "Express adapter for HTTP Server",
  "author": "Augustus Kamau",
  "license": "MIT",
  "keywords": [
    "hemjs",
    "http-adapter",
    "express-adapter"
  ],
  "scripts": {
    "prebuild": "rimraf -rf dist",
    "build": "tsc -p tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "prerelease": "npm run prebuild && npm run build",
    "release": "release-it"
  },
  "dependencies": {
    "express": "4.18.2"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.1",
    "@commitlint/config-conventional": "17.4.0",
    "@hemtypes/http-adapter": "0.2.1",
    "@types/express": "4.17.15",
    "@types/node": "18.11.18",
    "@typescript-eslint/eslint-plugin": "5.48.0",
    "@typescript-eslint/parser": "5.48.0",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-import": "2.26.0",
    "husky": "8.0.3",
    "lint-staged": "13.1.0",
    "prettier": "2.8.2",
    "release-it": "15.6.0",
    "rimraf": "3.0.2",
    "typescript": "4.9.4"
  },
  "homepage": "https://github.com/hemjs/express-adapter#readme",
  "bugs": {
    "url": "https://github.com/hemjs/express-adapter/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hemjs/express-adapter.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
